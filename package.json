{
  "name": "nomad-hypertext",
  "version": "0.0.1",
  "private": true,
  "main": "main.cjs",
  "scripts": {
    "dev": "vite dev",
    "electron-start": "export NODE_ENV=development && electron .",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "vite build && electron-forge make",
    "view-logs": "tail -f ~/Library/Logs/nomad-hypertext/main.log"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.20.4",
    "autoprefixer": "^10.4.15",
    "electron": "^26.2.1",
    "postcss": "^8.4.29",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.3",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.0",
    "vite": "^4.4.2"
  },
  "type": "module",
  "dependencies": {
    "@orama/orama": "^1.2.6",
    "@orama/plugin-data-persistence": "^1.2.6",
    "@sveltejs/adapter-static": "^2.0.3",
    "@xenova/transformers": "^2.5.4",
    "commander": "^11.0.0",
    "electron-log": "^5.0.0-beta.29",
    "electron-squirrel-startup": "^1.0.0",
    "faiss-node": "^0.5.1",
    "glob": "^10.3.4",
    "openai": "^4.6.0",
    "p-limit": "^4.0.0",
    "pdfjs-dist": "^3.10.111",
    "sharp": "^0.32.5"
  }
}
